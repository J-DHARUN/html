<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Show Images</title>
    <style>
        body {
            background-size: cover;
            background-position: center;
        }

        img {
            display: none;
            max-width: 100%;
            height: auto;
        }
    </style>
</head>
<body>

    <div>
        <img id="image" src="download.jpeg" alt="Image 1">
    </div>
    <button type="button" onclick="show('image', 'btnID')" id="btnID">Show Image 1</button>

    <div>
        <img id="image1" src="download.jpeg" alt="Image 2">
    </div>
    <button type="button" onclick="show('image1', 'btnID1')" id="btnID1">Show Image 2</button>

    <div>
        <img id="image2" src="download.jpeg" alt="Image 3">
    </div>
    <button type="button" onclick="show('image2', 'btnID2')" id="btnID2">Show Image 3</button>

    <script>
        function show(imageId, buttonId) {
            document.getElementById(imageId).style.display = "block";
            document.getElementById(buttonId).style.display = "none";
        }
    </script>

</body>
</html>
